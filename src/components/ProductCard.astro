---
import Image from './Image.astro';

interface Props {
  id: string;
  title: string;
  description: string;
  price: number;
  imageUrl: string;
  category: 'personalizados' | 'croche';
}

const { id, title, description, price, imageUrl, category } = Astro.props;

// Formata o preço para o formato brasileiro
const formattedPrice = new Intl.NumberFormat('pt-BR', {
  style: 'currency',
  currency: 'BRL'
}).format(price);
---

<div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow duration-300">
  <a href={`/${category}/${id}`} class="block">
    <div class="relative pb-[75%] overflow-hidden">
      <Image 
        src={imageUrl} 
        alt={title} 
        class="absolute inset-0 w-full h-full object-cover transition-transform duration-300 hover:scale-105"
        loading="lazy"
        width={400}
        height={300}
      />
    </div>
    <div class="p-4">
      <h3 class="text-lg font-semibold text-gray-800 mb-1">{title}</h3>
      <p class="text-gray-600 text-sm mb-2 line-clamp-2">{description}</p>
      <p class="text-primary font-bold text-xl">{formattedPrice}</p>
    </div>
  </a>
  <div class="px-4 pb-4">
    <div class="flex gap-2">
      <a 
        href={`/${category}/${id}`} 
        class="flex-1 text-center py-2 px-4 bg-primary text-white rounded-md hover:bg-pink-500 transition-colors mb-2"
      >
      Ver detalhes
    </a>
    <a 
      href={`https://wa.me/5511999999999?text=Olá! Gostaria de saber mais sobre o produto: ${title}`} 
      target="_blank" 
      rel="noopener noreferrer" 
      class="w-10 flex items-center justify-center py-2 px-2 bg-green-500 text-white rounded-md hover:bg-green-600 transition-colors mb-2"
      aria-label="Contato via WhatsApp"
    >
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
