---
import Layout from '../../layouts/Layout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import ProductCard from '../../components/ProductCard.astro';
import { getProductsByCategory } from '../../data/products.js';

// Obter produtos personalizados do arquivo centralizado
const personalizadosProducts = getProductsByCategory('personalizados');
---

<Layout title="Personalizados | Maarte Ateliê" description="Produtos personalizados para festas e eventos especiais - Maarte Ateliê">
  <Navbar />
  
  <!-- Hero Section -->
  <section class="bg-gradient-to-r from-pink-100 to-rose-100 py-16">
    <div class="container mx-auto px-4 text-center">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-800 mb-4">Produtos Personalizados</h1>
      <p class="text-xl text-gray-700 max-w-2xl mx-auto">
        Kits e itens personalizados para tornar sua festa ou evento ainda mais especial.
      </p>
    </div>
  </section>
  
  <!-- Products Grid -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {personalizadosProducts.map(product => (
          <ProductCard 
            id={product.id}
            title={product.title}
            description={product.description}
            price={product.price}
            imageUrl={product.imageUrl}
            category={product.category}
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-12 bg-gray-50">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Não encontrou o que procura?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Podemos criar produtos personalizados especialmente para você. Entre em contato conosco para discutir suas ideias.
      </p>
      <a 
        href="https://wa.me/5511999999999?text=Olá!%20Gostaria%20de%20um%20produto%20personalizado%20do%20Maarte%20Ateliê."
        target="_blank"
        rel="noopener noreferrer"
        class="inline-block bg-primary hover:bg-pink-500 text-white font-medium py-3 px-6 rounded-lg transition-colors"
      >
        Fale Conosco pelo WhatsApp
      </a>
    </div>
  </section>
  
  <Footer />
</Layout>

